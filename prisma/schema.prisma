generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PetAge {
  PUPPY
  ADULT
}

enum PetSize {
  SMALL
  MEDIUM
  LARGE
}

enum PetEnergyLevel {
  LOW
  MEDIUM
  HIGH
}

enum PetEnvironment {
  SMALL
  MEDIUM
  LARGE
}

model Org {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  password     String
  manager_name String
  whatsapp     String
  address      String
  cep          String
  city         String
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
  pets         Pet[]

  @@map("orgs")
}

model Pet {
  id           String         @id @default(uuid())
  name         String
  about        String
  age          PetAge
  size         PetSize
  energy_level PetEnergyLevel
  environment  PetEnvironment
  created_at   DateTime       @default(now())
  updated_at   DateTime       @updatedAt

  org          Org              @relation(fields: [org_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  org_id       String
  requirements PetRequirement[]

  @@map("pets")
}

model Requirement {
  id               String           @id @default(uuid())
  description      String           @unique
  created_at       DateTime         @default(now())
  updated_at       DateTime         @updatedAt
  pet_requirements PetRequirement[]

  @@map("requirements")
}

model PetRequirement {
  pet    Pet    @relation(fields: [pet_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  pet_id String

  requirement    Requirement @relation(fields: [requirement_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  requirement_id String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@id([pet_id, requirement_id])
  @@map("pet_requirements")
}
